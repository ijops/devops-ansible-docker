pipeline {
     agent {
        label params.Target == "any" ? "" : params.Target 
    }
   
    parameters {
        gitParameter branchFilter: 'origin/(.*)', defaultValue: 'master', name: 'BRANCH', type: 'PT_BRANCH'
        choice(name: "Target", choices: [ "any", "dkas", "standby", "production", "built-in Node", "Master"])
    }
    stages {
        stage('git source code') {
            steps {
                git credentialsId: 'bit', branch: "${params.BRANCH}", url: 'https://ijazbro@bitbucket.org/ijazbro/devops-docker-javaapp.git'
                }
        }
        stage('test') {
            steps {
                sh "mvn test"
                }
        }
        stage('checkstyle') {
            steps {
                sh "mvn checkstyle:checkstyle"
                recordIssues(tools: [checkStyle(reportEncoding: 'UTF-8')])
                
                }
        }
        stage('pmd analysis') {
            steps {
                sh "mvn pmd:pmd"
                recordIssues(tools: [pmdParser(reportEncoding: 'Big5-HKSCS')])
                
                }
        }
        
        stage('sonar check') {
            steps {
                script {
                    withSonarQubeEnv(credentialsId: 'Sonar') {
                      sh "mvn sonar:sonar"   
                }
                
                  
                  timeout(time: 1, unit: 'HOURS') {
                     def qg = waitForQualityGate()
                      if (qg.status != 'OK') {
                           error "Pipeline aborted due to quality gate failure: ${qg.status}"
                           echo "Build failed due to sonar quality gate failure"
                      }
                    }
                
                
                }
        }
        
        }
        
         stage('build') {
            steps {
                sh "mvn package"
                
                }
        }
        stage('docker build') {
            steps {
                sh "sudo docker stop devops-docker-javaapp"
                sh "sudo docker rm  devops-docker-javaapp"
                sh "sudo docker image prune -a -f"
                sh "sudo docker build -t ijazu/devops-docker-javaapp:$BUILD_ID -f my-dockerfile ."
                sh "sudo docker run -itd --name devops-docker-javaapp -p 8084:8080 ijazu/devops-docker-javaapp:$BUILD_ID"
                
                withDockerRegistry(credentialsId: 'dockerhub', url: 'https://index.docker.io/v1/') {
                 sh "sudo docker push ijazu/devops-docker-javaapp:$BUILD_ID "
                                  }
                }
        }
        
        post {
         success {
         mail bcc: '', body: '''Build Success
''', cc: '', from: '', replyTo: '', subject: 'From Jenkins@tset.server', to: 'ijazm@gnrgy.com'
         }
          failure {
            echo 'I failed :('
            mail bcc: '', body: '''Build Failed
''', cc: '', from: '', replyTo: '', subject: 'From Jenkins@tset.server', to: 'ijazm@gnrgy.com'

}
        
         
    }}